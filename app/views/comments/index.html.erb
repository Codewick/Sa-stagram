<p id="notice"><%= notice %></p>
<h1>Comments</h1>
<table>
  <thead>
    <tr>
      <th>Photo</th>
      <th>User</th>
      <th>Comment</th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
    <tr>
      <td><img src="<%= comment.photo.image_url %>"></td>
      <td><%= comment.user_id %></td>
      <td><%= comment.content %></td>
      <td><%= link_to 'Show', [@photo, comment] %></td>
      <td><%= link_to 'Edit', edit_photo_comment_path(@photo, comment) %></td>
      <td><%= link_to 'Delete', [@photo, comment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
</table>



<%= render 'form', comment: @new_comment %>

<p id="notice"><%= notice %></p>

<h1>Photos</h1>

<table class="table">
  <thead>
    <tr>
      <th>Image</th>
      <th>Username</th>
      <th>User ID</th>
      <th>Caption</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
    <tr>
      <td><img src="<%= photo.image_url %>" width="500" height="500"></td>
      <td><%= photo.user.userName %></td>
      <td><%= photo.user_id %></td>
      <td><%= photo.caption %></td>
      <td><%= link_to 'Show', photo %></td>
      <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
      <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>

</table>

<br>

<%= link_to 'Add Photo', new_photo_path %>
